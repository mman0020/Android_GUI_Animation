<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_start_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="start second activity"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_start_shared_element_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:transitionName="shared element"
        android:text="start shared element activity"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_start_custom_transition_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="start custom transition activity"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_start_custom_visibility_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="start custom visibility activity"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="300dp"
        android:transitionName="image"
        android:src="@drawable/vehicle"/>





</LinearLayout>